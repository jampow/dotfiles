alias la="ls -a"
alias ll="ls -l"
alias ls="ls --color=auto"

alias ff="find . -name "

alias hosts="sudo vim /etc/hosts"

#switch keyboard to fix typing on synergy client
alias kbmac="setxkbmap us"
alias kbnix="setxkbmap br"

alias vpn="sudo openfortivpn"

alias akamai-debug="curl -H 'user-agent: Mozilla/5.0 (X11; Linux x86_64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/87.0.4280.88 Safari/537.36' -H 'Pragma: akamai-x-cache-on, akamai-x-cache-remote-on, akamai-x-check-cacheable, akamai-x-get-cache-key, akamai-x-get-true-cache-key, akamai-x-get-extracted-values, akamai-x-get-ssl-client-session-id, akamai-x-serial-no, akamai-x-get-request-id'"

mkcd()
{
  mkdir -p $1 &&
  cd $1
}
