client.focused          $base07 $base01    $base07 $base0F
client.focused_inactive $base02 $base02    $base03 $base0F
client.unfocused        $base02 $base02    $base03 $base0F
client.urgent           $base02 $base08    $base00 $base0F

hide_edge_borders both

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
  font pango:Inconsolata 10
	status_command $HOME/.local/bin/bumblebee-status \
		-m spotify pipewire docker_ps cpu memory disk apt battery indicator datetime \
		-p disk.format="{path} {percent:05.02f}%" memory.format="{used} ({percent:04.02f}%)" indicator.include="capslock" datetime.format="%d/%m %H:%M" \
		-t nord-powerline
        # strip_workspace_numbers yes
	# height 25
	bindsym button4 nop
	bindsym button5 nop
	colors {
		separator $base03
		background $base01
		statusline $base05
		#                  border  background text
		focused_workspace  $base01 $base01    $base07
		active_workspace   $base01 $base02    $base03
		inactive_workspace $base01 $base01    $base03
		urgent_workspace   $base01 $base01    $base08
	}
}

# Lock Screen and DPMS
set $lock $HOME/.local/bin/lock

set $lk_time 300
set $bl_time 330
set $lb_time 15

exec_always pgrep swayidle || swayidle -w \
    timeout $lk_time "$lock" \
    timeout $bl_time "swaymsg 'output * dpms off'" \
     resume "swaymsg 'output * dpms on'" \
    timeout $lb_time "pgrep swaylock && swaymsg 'output * dpms off'" \
     resume "pgrep swaylock && swaymsg 'output * dpms on'" \
    before-sleep "$lock"

# screen lock
bindsym $mod+shift+o exec "playerctl pause; $lock"

# volume binds
bindsym $mod+comma exec pamixer -d 5
bindsym $mod+period exec pamixer -i 5
bindsym $mod+m exec pamixer -t

