# murder mode
set $mode_murder : [c]hrome [s]potify [l]vim
mode "$mode_murder" {
        bindsym c exec killall chrome && killall chromium
        bindsym s exec killall spotify

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+i mode "$mode_murder"

bindsym Print exec $HOME/.local/bin/screenshot

