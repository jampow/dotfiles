# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

for_window [title=cheatsheet] floating enable

# resize window (you can also use the mouse for that)
mode "" {
        bindsym shift+question exec cheatsheet ""

        # These bindings trigger as soon as you enter the resize mode
        bindsym j resize shrink width 5 px or 5 ppt
        bindsym k resize grow height 5 px or 5 ppt
        bindsym l resize shrink height 5 px or 5 ppt
        bindsym ccedilla resize grow width 5 px or 5 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 5 px or 5 ppt
        bindsym Down resize grow height 5 px or 5 ppt
        bindsym Up resize shrink height 5 px or 5 ppt
        bindsym Right resize grow width 5 px or 5 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode ""

# launcher mode
mode "" {
        bindsym shift+question exec cheatsheet 

        bindsym c exec google-chrome
        bindsym d exec google-chrome-unstable 
        bindsym g exec gvim
        bindsym t exec thunar
        bindsym s exec spotify
        bindsym f exec franz
        bindsym e exec thunderbird
        bindsym x exec firefox

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+u mode ""

# murder mode
mode "" {
        bindsym shift+question exec cheatsheet 

        bindsym c exec killall chrome && killall chromium
        bindsym g exec killall gvim
        bindsym t exec killall thunar
        bindsym s exec killall spotify
        bindsym f exec killall franz
        bindsym e exec killall thunderbird
        bindsym x exec killall firefox

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+i mode ""

# screenshot mode
mode "" {
        bindsym shift+question exec cheatsheet 

        bindsym s exec scrot -e 'mv $f ~/Pictures/scrot-`date +%F_%T`.png'
        bindsym a exec scrot -u -e 'mv $f ~/Pictures/scrot-`date +%F_%T`.png'
        bindsym f exec scrot -e 'mv $f ~/Pictures/scrot-`date +%F_%T`.png'

	bindsym j focus left
	bindsym k focus down
	bindsym l focus up
	bindsym ccedilla focus right

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+b mode ""

